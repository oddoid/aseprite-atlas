{
  "name": "aseprite-atlas",
  "author": "oddoid",
  "version": "2.0.8",
  "license": "GPL-3.0-only",
  "description": "Aseprite sprite atlas parser and animator for browser and Node.js.",
  "keywords": [
    "aseprite",
    "game",
    "animation",
    "pixel-art",
    "animated-sprites",
    "spritesheet",
    "sprites",
    "sprite-atlas",
    "sprite-parser"
  ],
  "main": "dist/main.js",
  "types": "dist/index.d.ts",
  "bin": {
    "aseprite-atlas-pack": "bin/aseprite-atlas-pack"
  },
  "scripts": {
    "start": "webpack -dw",
    "test:unit": "jest -c jest.config.json",
    "test": "npm -s run formatter -- -l && npm -s run build && npm -s run test:unit && cd demo && npm -s t",
    "build": "webpack -p",
    "format": "npm -s run formatter -- --write",
    "formatter": "prettier './**/*.{js,json,html,md,ts}'",
    "preversion": "[ -z \"$(git status -z)\" ]",
    "version": "npm t",
    "postversion": "npm publish",
    "prepublishOnly": "git push origin \"$(git rev-parse --abbrev-ref @)\" \"$(git tag --points-at @)\""
  },
  "homepage": "https://github.com/oddoid/aseprite-atlas",
  "repository": "github:oddoid/aseprite-atlas",
  "bugs": "https://github.com/oddoid/aseprite-atlas/issues",
  "devDependencies": {
    "@types/jest": "24.0.18",
    "clean-webpack-plugin": "3.0.0",
    "jest": "24.9.0",
    "pre-commit": "1.2.2",
    "prettier": "1.18.2",
    "ts-jest": "24.1.0",
    "ts-loader": "6.2.0",
    "typescript": "3.6.4",
    "webpack": "4.41.0",
    "webpack-cli": "3.3.9"
  }
}
