{
  "testPathIgnorePatterns": ["/node_modules/", "/dist/"],
  "transform": {".+\\.ts$": "ts-jest"},
  "moduleNameMapper": {
    "^\\.\\./\\.\\./dist(/lib/.+)\\.js$": "..$1",
    "^(\\.?\\./.+)\\.js$": "$1"
  },
  "collectCoverage": true,
  "coverageDirectory": "dist/coverage",
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/dist/",
    "src/lib/index.ts"
  ],
  "errorOnDeprecated": true,
  "coverageThreshold": {
    "global": {
      "statements": 100,
      "branches": 100,
      "functions": 100,
      "lines": 100
    }
  },
  "globals": {"ts-jest": {"tsconfig": "src/sub-tsconfig.json"}}
}
