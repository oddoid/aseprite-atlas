{
  "testPathIgnorePatterns": ["/node_modules/", "/lib/dist/", "/demo/dist/"],
  "transform": {".+\\.ts$": "ts-jest"},
  "collectCoverage": true,
  "coverageDirectory": "lib/dist/coverage",
  "coveragePathIgnorePatterns": ["/node_modules/", "/lib/dist/", "/demo/"],
  "errorOnDeprecated": true,
  "coverageThreshold": {
    "global": {
      "statements": 100,
      "branches": 100,
      "functions": 100,
      "lines": 100
    }
  },
  "roots": ["<rootDir>/lib", "<rootDir>/demo"]
}
