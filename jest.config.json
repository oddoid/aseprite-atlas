{
  "testPathIgnorePatterns": ["/node_modules/", "/dist/"],
  "transform": {".+\\.ts$": "ts-jest"},
  "collectCoverage": true,
  "coverageDirectory": "dist/coverage",
  "coveragePathIgnorePatterns": ["/node_modules/", "/dist/", "/demo/"],
  "errorOnDeprecated": true,
  "coverageThreshold": {
    "global": {
      "statements": "100",
      "branches": 100,
      "functions": 100,
      "lines": 100
    }
  }
}
